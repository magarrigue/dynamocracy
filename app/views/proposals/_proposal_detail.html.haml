      - count = proposal.send "#{type}_count"
      - size = ( type!='pass' ? 2+ 4 * count/( proposal.signatures_count + 1) : 1)
      %span{:class => "#{type}", :style => "font-size: #{size}em"}
        = "#{type}: #{count}"
      %br

.suggest
